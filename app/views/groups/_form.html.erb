
<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Group Name', input_html: {class: 'form-control input_text_box'} %>
    <%#= f.input :buy_in, label: 'Add a buy in amount', input_html: {class: 'form-control input_text_box'} %>
    <%#= f.input :note_1, label: 'Add Group Note', input_html: {class: 'form-control input_text_box'} %>
    <%= f.input :auto_draft_complete, input_html: {value: false}, as: :hidden %>
    <%= f.input :live_draft_complete, input_html: {value: false}, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
